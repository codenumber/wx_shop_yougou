<view class="index_main">
  <SearchInput></SearchInput> 
  <swiper class="swiper" autoplay indicator-dots>
    <swiper-item wx:for="{{swiperList}}" wx:key="goods_id" >
      <image mode="widthFix" src="{{item.image_src}}"></image>
    </swiper-item> 
  </swiper>
<view class="cate_list"> 
  <navigator wx:for="{{cateList}}" wx:key="index" >
    <image src="{{item.image_src}}" mode="widthFix">
    </image>
  </navigator>
</view>
<view class="floor">
  <view class="floor_list" wx:for="{{floorList}}" wx:for-item="item1" wx:for-index="index1" wx:key="index1">
    <navigator>
      <image mode="widthFix" src="{{item1.floor_title.image_src}}"></image>
    </navigator>
    <navigator  wx:for="{{item1.product_list}}" wx:key="index2" wx:for-index="index2" wx:for-item="item2" >
      <image mode="{{index2 == 0? 'widthFix':'scaleToFill'}}" src="{{item2.image_src}}"></image>
  </navigator>
  </view>
</view>
</view>
