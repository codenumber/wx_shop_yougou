page {
  background-color: #ebece7;
}
.searh_query {
  display: flex;
  padding: 15rpx;
  background-color: #fff;
}
.search_input {
  border: 2rpx solid #ccc;
  height: 60rpx;
  flex: 1;
  border-radius: 5rpx;
  padding: 0 15rpx;
  position: relative;
}
.btn {
  width: 100rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.btn button {
  padding: 15rpx;
  font-size: 26rpx;
}
.search_content {
  position: absolute;
  width: 100%;
  top: 80rpx;
  left: 0;
  background-color: #fff;
  
}
.search_content .search_item {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 15rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
}
