.goods_pics {
  height: 70vw;
  
}
.pic_item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pic_item image{
  width: 90vw;
}
.goods_price {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: bold;
  padding: 0 10rpx;
}
.goods_title {
  display: flex;
}
.goods_name {
  flex: 5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-left: 15rpx;
  margin-bottom: 10rpx;
}
.collect {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 66rpx;
  border-left: 5rpx solid #000;
  flex-direction: column;

}
 .iconfont {
  font-size: 50rpx;
}
.collect_text,.collect_text text {
  font-size: 26rpx;
}
.icon-star--filled {
  color: var(--themeColor);
}
.introduce_title {
  height: 80rpx;
  padding-left: 15rpx;
  display: flex;
  align-items: center;
  font-weight: bolder;
  font-size: 36rpx;
  border-top: 4rpx solid #ccc;
  border-bottom: 4rpx solid #ccc;
}
.goodsinfo {
  margin-bottom: 90rpx;
}
.btm_menu {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
}
.btm_item {
  flex: 1.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btm_item .iconfont {
  font-size: 46rpx;
}
.btm_item  {
  font-size: 20rpx;
}
.btm_item button {
  position: absolute;
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 0;
  opacity: 0;
}
.btm_btn {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #ffa300;
}
.btm_btn:last-child {
  background-color: var(--themeColor);
}

